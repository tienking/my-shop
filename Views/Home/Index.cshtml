@model List<MyShop.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner">
    <div class="container">
        <div class="banner_desc">
            <h1>MYSHOP</h1>
            <h2>Cung cấp những xu hướng thời trang mới nhất</h2>
            <div class="button">
                <a href="@Url.Action("ListAll","Category")" class="hvr-shutter-out-horizontal">Mua sắm ngay</a>
            </div>
        </div>
    </div>
</div>

<div class="content_top">
    <h3 class="m_1">Sản phẩm mới nhất</h3>
    <div class="container">
        <div class="box_1">
            <div class="col-md-7">
                <div class="section group">
                    @if (Model.Count() > 0)
                    {
                        var count = Model.Count();
                        var j = 0;
                        if (count > 3)
                        {
                            j = 3;
                        }
                        else { j = count; }
                        for (var i = 1; i <= j; i++)
                        {
                            <div class="col_1_of_3 span_1_of_3">
                                <div class="shop-holder">
                                    <div class="product-img">
                                        <a href=@Url.Action("Detail","Product",new { id = Model[count -i ].MaSP})>
                                            <img width="225" height="265" src="@Url.Content(Model[count - i].HinhAnh)" class="img-responsive" alt="item4">
                                        </a>
                                        @using (Html.BeginForm("AddGioHang", "GioHang", new { @MaSP = Model[count - i].MaSP, @url = Request.Url.ToString() }))
                                        {
                                            <button type="submit" class="button"></button>
                                        }

                                    </div>
                                </div>
                                <div class="shop-content" style="height: 80px;">
                                    <div><a href="single.html" rel="tag">@Model[count - i].Mau</a></div>
                                    <h3><a href="single.html">@Model[count - i].Ten</a></h3>
                                    <span><span class="amount">@Model[count - i].Gia</span> VND</span>
                                </div>
                            </div>
                        }
                    }
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-md-5 row_3">
                <div class="about-block-content">
                    <div class="border-add"></div>
                    <h4>Về chúng tôi</h4>
                    <p>MyShop chuyên cung cấp những sản phẩm thời trang mới nhất, tốt nhất cho khách hàng.</p>
                    <p>MyShop cam kết về chính sách giao hàng và đổi trả hàng dễ dàng trên toàn quốc.</p>
                    <p>		        	</p>
                </div>
                <img src="~/Content/images/pic9.jpg" class="img-responsive" alt="" />
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="content_bottom">
    <div class="container">
        <h2 class="m_3">From the Blog</h2>
        <div class="grid_1">
            <div class="col-md-6 blog_1">
                <div class="item-inner">
                    <img src="~/Content/images/pic7.jpg" class="img-responsive" alt="" />
                    <div class="date-comments">
                        <div class="time"><span class="date"><span class="word1">14</span> <span class="word2">Jan</span> </span></div>
                        <div class="comments">
                            <span>
