
@model MyShop.Models.KhachHang
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="single_top">
    <div class="container">
        <div class="register">
            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()

                <div class="register-top-grid">
                    <h3>THÔNG TIN CÁ NHÂN</h3>
                    <div>
                        <label>Tên</label>
                        @Html.EditorFor(model => model.Ten)
                        @Html.ValidationMessageFor(model => model.Ten)
                    </div>

                    <div>
                        <label>Điện Thoại</label>
                        @Html.EditorFor(model => model.DienThoai)
                        @Html.ValidationMessageFor(model => model.DienThoai)
                    </div>

                    <div>
                        <label>Địa Chỉ</label>
                        @Html.EditorFor(model => model.DiaChi)
                        @Html.ValidationMessageFor(model => model.DiaChi)
                    </div>

                    <div>
                        <label>Email</label>
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div class="clearfix"> </div>
                    <a class="news-letter" href="#">
                        <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Sign Up for Newsletter</label>
                    </a>

                </div>
                <div class="register-bottom-grid">
                    <h3>THÔNG TIN ĐĂNG NHẬP</h3>
                    <div>
                        <label>Tên Đăng Nhập</label>
                        @Html.EditorFor(model => model.TenDangNhap)
                        @Html.ValidationMessageFor(model => model.TenDangNhap)
                    </div>
                    <div>
                        <label>Password</label>
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new {@type = "password" } })
                        @Html.ValidationMessageFor(model => model.MatKhau)
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>
                <span style="color: #e60000">@Html.ValidationMessage("Register")</span>
                <div class="register-but" style="margin-top:1em">
                    <form>
                        <input type="submit" value="Đăng kí" style="background:#df1f26;color: #FFF;font-size: 0.8em;padding: 0.8em 2em;transition: 0.5s all;-webkit-transition: 0.5s all;-moz-transition: 0.5s all;-o-transition: 0.5s all;display: inline-block;text-transform: uppercase;border:none;outline:none}">
                        <div class="clearfix"> </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

